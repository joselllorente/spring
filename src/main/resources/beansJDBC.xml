<?xml version="1.0" encoding="UTF-8"?> 
 <beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
 xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
 default-init-method="init" default-destroy-method="destroy"> 
 
 
 <!-- Initialization for data source --> 
 <bean id="dataSourceDriver" class="org.springframework.jdbc.datasource.SimpleDriverDataSource"> 
	 <property name="driverClass" value="oracle.jdbc.driver.OracleDriver"/>
	 <property name="url" value="jdbc:oracle:thin:@localhost:1521:XE"/> 
	 <property name="username" value="curso"/> 
	 <property name="password" value="password"/>
 </bean>
		
		
 <!-- Definition for studentJDBCTemplate bean --> 
 <bean id="pacienteJDBCTemplate" class="spring.bbdd.jdbc.impl.PacienteJDBCTemplate" lazy-init="true"> 
 	<property name="dataSource" ref="dataSourceDriver" />
 </bean>

<!--   <bean id="pacienteJDBCTemplate" class="spring.bbdd.jdbc.impl.PacienteJDBCTemplate"> 
 	<property name="jdbcTemplate" ref="jdbcTemplate" />
 </bean>
 
 <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
 	<constructor-arg ref="dataSourceDriver"/>
 </bean> -->

 </beans> 